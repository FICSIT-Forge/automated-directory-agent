{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "predeploy": [
        "pnpm --prefix \"$RESOURCE_DIR\" run format",
        "pnpm --prefix \"$RESOURCE_DIR\" run lint",
        "pnpm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "site": "adagent",
    "public": "web/.output/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}