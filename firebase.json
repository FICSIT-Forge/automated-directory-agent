{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "predeploy": [
        "pnpm --prefix \"$RESOURCE_DIR\" run format",
        "pnpm --prefix \"$RESOURCE_DIR\" run lint",
        "pnpm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "site": "adagent",
    "source": "web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    }
  }
}
